extends layout

block content
  h1 #{title} : Your Orders  
  p Order ID :  #{orderId}
  p Amount : $#{orderAmount}
  button.btn.btn-primary.btn-lg(type='submit', ng-click='order("#{title}",  #{orderId}, #{orderAmount})') Order!

  script(src='http://code.jquery.com/jquery-1.11.2.min.js', type='text/javascript')
  script(src='http://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js', type='text/javascript')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.12/angular.min.js')
  script(src='javascripts/app.js')
